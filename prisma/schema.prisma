// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Book {
  id              Int     @id @default(autoincrement())
  title           String
  author          String[]
  description     String
  pages           Int
  coverURL        String
  yearPublished   Int
  genre           String[]
}

model Review {
  id                Int         @id @default(autoincrement())
  bookId            Int         @unique
  review            String
  lastUpdated       DateTime    @default(now())
}